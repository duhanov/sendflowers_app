	<Table style="padding-left: 30px;">
		<tr>
			<td width="250"><b>Название</b></td>
			<td width="100"><b>Фото</b></td>
			<td width="400"><b>Офписание</b></td>
		</tr>
	</Table>
	<%sortable "/#{params[:controller]}/sort" do %>
		<%for item in items%>
			<%sortable_item item do%>
				<div style="float:left;">
					<table cellpadding="0" cellspacing="0" class="product_info" update_url="/<%=params[:controller]%>/update/">
					<tbody>
						<tr rowid="<%=item.id%>">
							<td width="250" class="edit_string" field="name"><%=item.name%></td><td></td>
							<td width="100" class="eedit_string" field="name">
								
				<img id="product_image_<%=item.id%>" onClick="edit_product_photo(<%=item.id%>, '/<%=params[:controller]%>/update_product_image/');" style='margin-top: 0px; cursor: pointer;' alt="Фото (нажмите для редактирования)" title="Фото (Нажмите для редактирования)" src="<%=item.image.url(:original)%>" />
												
							</td>
							<td width="400" class="edit_text" field="description" style="display: block; height: 120px; overflow: hidden;"><%=item.description%></td>
						</tr>
					</tbody>
					</table>
				</div>
				<div class="ctrls" style="float:right;"><a href="" item_id="<%=item.id%>" class="del_product" style='color:blue;font-size:12px;text-decoration: underline;'>Удалить</a></div>
			<%end%>
		<%end%>
	<%end%>
